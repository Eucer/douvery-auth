{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@douvery/auth": ["./src/index.ts"]
    }
  },
  "include": ["src/qwik/**/*", "src/session/**/*", "src/index.ts", "src/types.ts", "src/client.ts", "src/pkce.ts", "src/storage.ts"],
  "exclude": ["node_modules", "dist", "src/react"]
}
